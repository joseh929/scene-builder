<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.payroll.HelloController" prefHeight="600.0" prefWidth="900.0">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <Label text="Payroll Management System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <center>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50" prefWidth="50"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="150"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250"/>
            </columnConstraints>
            
            <rowConstraints>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="35" vgrow="SOMETIMES"/>
            </rowConstraints>
            
            <!-- LEFT COLUMN - EMPLOYEE DETAILS -->
            
            <!-- Row 0 - Employer's Name -->
            <Label text="Employer's Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtEmployerName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <!-- Row 1 - Employee Ref No -->
            <Label text="Employee Ref. No:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtEmployeeRef" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <!-- Row 2 - Employee Name -->
            <Label text="Employee Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtEmployeeName" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <!-- Row 3 - Employee Address -->
            <Label text="Employee Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="txtEmployeeAddress" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            
            <!-- Row 4 - Post Code -->
            <Label text="Post Code:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="txtPostCode" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            
            <!-- Row 6 - Inner City Weight -->
            <Label text="Inner City Weight:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="txtInnerCityWeight" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            
            <!-- Row 7 - Basic Salary -->
            <Label text="Basic Salary:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <TextField fx:id="txtBasicSalary" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
            
            <!-- Row 8 - Over Time -->
            <Label text="Over Time:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <TextField fx:id="txtOverTime" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
            
            <!-- Row 10 - Gross Pay -->
            <Label text="Gross Pay:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            <TextField fx:id="txtGrossPay" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
            
            <!-- Row 11 - Pensionable Pay -->
            <Label text="Pensionable Pay:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
            <TextField fx:id="txtPensionablePay" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
            
            <!-- RIGHT COLUMN - PAY SLIP AREA -->
            
            <!-- Pay Slip Label -->
            <Label text="Pay Slip" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
            
            <!-- Pay Date -->
            <Label text="Pay Date:" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            <TextField fx:id="txtPayDate" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
            
            <!-- Tax Period -->
            <Label text="Tax Period:" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            <ComboBox fx:id="cmbTaxPeriod" prefWidth="250" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
            
            <!-- Tax Code -->
            <Label text="Tax Code:" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            <ComboBox fx:id="cmbTaxCode" prefWidth="250" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
            
            <!-- NI Code -->
            <Label text="NI Code:" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
            <ComboBox fx:id="cmbNICode" prefWidth="250" GridPane.columnIndex="4" GridPane.rowIndex="4"/>
            
            <!-- NI Number -->
            <Label text="NI Number:" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
            <TextField fx:id="txtNINumber" GridPane.columnIndex="4" GridPane.rowIndex="5"/>
            
            <!-- Tax -->
            <Label text="Tax:" GridPane.columnIndex="3" GridPane.rowIndex="6"/>
            <TextField fx:id="txtTax" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="4" GridPane.rowIndex="6"/>
            
            <!-- Pension -->
            <Label text="Pension:" GridPane.columnIndex="3" GridPane.rowIndex="7"/>
            <TextField fx:id="txtPension" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="4" GridPane.rowIndex="7"/>
            
            <!-- Student Loan -->
            <Label text="Student Loan:" GridPane.columnIndex="3" GridPane.rowIndex="8"/>
            <TextField fx:id="txtStudentLoan" GridPane.columnIndex="4" GridPane.rowIndex="8"/>
            
            <!-- NI Payment -->
            <Label text="NI Payment:" GridPane.columnIndex="3" GridPane.rowIndex="9"/>
            <TextField fx:id="txtNIPayment" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="4" GridPane.rowIndex="9"/>
            
            <!-- Taxable Pay -->
            <Label text="Taxable Pay:" GridPane.columnIndex="3" GridPane.rowIndex="10"/>
            <TextField fx:id="txtTaxablePay" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="4" GridPane.rowIndex="10"/>
            
            <!-- Deductions -->
            <Label text="Deductions:" GridPane.columnIndex="3" GridPane.rowIndex="11"/>
            <TextField fx:id="txtDeductions" editable="false" style="-fx-background-color: #f0f0f0;" GridPane.columnIndex="4" GridPane.rowIndex="11"/>
            
        </GridPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Button fx:id="btnNetWages" text="Net Wages" onAction="#calculateNetWages" prefWidth="120"/>
            <Button fx:id="btnPaySlip" text="Pay Slip" onAction="#generatePaySlip" prefWidth="120" />
            <Button fx:id="btnReset" text="Reset" onAction="#resetForm" prefWidth="120" />
            <Button fx:id="btnExit" text="Exit" onAction="#exitApplication" prefWidth="120" />
        </HBox>
    </bottom>
</BorderPane>
